<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Bloggy</title>
</head>
<body>
    <nav class="glass-nav">
        <div class="logo">Bloggy</div>
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="#featured">Featured</a>
            <a href="#about">About</a>
            <a href="#contact">Contact</a>
        </div>
        <div class="nav-controls">
            <a href="/create-post" class="create-post-btn">
                <i class="fas fa-plus"></i>
                Create Post
            </a>
            <a href="/profile" class="profile-btn" title="<%= user.name %>">
                <img src="<%= user.avatar %>" alt="Profile" class="profile-icon">
            </a>
        </div>
    </nav>
    <main>
        <article class="featured card">
            <div>
                <span class="tag">Featured</span>
                <h1 class="post-title"><%= featuredBlogs.title %></h1>
                <p class="post-excerpt"><%= featuredBlogs.content.slice(0, 180)+'...' %></p>
                <div class="post-meta">
                    <span class="read-time"> ??? </span>
                    <span><i class="far fa-calendar"></i> <%= new Date(featuredBlogs.created_at).toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'short', 
                        day: 'numeric',
                    }) %></span>
                </div>
                <a href="#" class="read-more">
                    Read Article <i class="fas fa-arrow-right"></i>
                </a>
                <div class="author-info">
                    <img src="<%= featuredBlogs.user.avatar %>" alt="<%= featuredBlogs.user.name %>" class="author-avatar"> 
                    <div class="author-details">
                        <div class="author-name"><%= featuredBlogs.user.name %></div>
                        <div class="author-role"><%= featuredBlogs.user.role %></div>
                    </div>
                </div>
            </div>
            <% if (featuredBlogs.coverImage) { %>
                <img src="<%= featuredBlogs.coverImage %>" alt="Featured post image" class="cover-image">
            <% } %>
        </article>
        <div class="section-header">
            <h2 class="section-title">
                <i class="fas fa-clock-rotate-left"></i>
                Recent Blogs
            </h2>
            <a href="#all-posts" class="view-all">
                View All Posts <i class="fas fa-arrow-right"></i>
            </a>
        </div>
        <div class="grid">

            <% blogs.forEach(blog => { %>
                <article class="card">
                    <span class="tag">Design</span>
                    <h2 class="post-title"><%= blog.title %></h2>
                    <p class="post-excerpt"><%= blog.content.slice(0, 180)+'...' %></p>
                    <div class="post-meta">
                        <span class="read-time"> ??? </span>
                    </div>
                    <a href="<%= `/blog/${blog.id}` %>" class="read-more">
                        Read Article <i class="fas fa-arrow-right"></i>
                    </a>
                    <div class="author-info">
                        <img src="<%= blog.user.avatar %>" alt="<%= blog.user.name %>" class="author-avatar">
                        <div class="author-details">
                            <div class="author-name"><%= blog.user.name %></div>
                            <div class="author-role"><%= blog.user.role %></div>
                        </div>
                    </div>
                </article>
            <% }); %>
        </div>
    </main>

    <script src="/javascripts/blogUtils.js"></script>
    <script>
        const postExcerpt = document.querySelectorAll(".post-excerpt");

        console.log(postExcerpt);
        
        postExcerpt.forEach(post => {
            const postValue = post.innerHTML;
            console.log(postValue);
            const decodedText = window.blogUtils.decodeHTMLEntities(postValue);
            post.innerHTML = window.blogUtils.stripHTML(decodedText);
            let timeToRead = window.blogUtils.getReadingTime(postValue);
            console.log(timeToRead);

            const readTime = document.querySelectorAll(".read-time");
            readTime.forEach(time => {
                time.innerHTML = `<i class="far fa-clock"></i> ${timeToRead}`;
            })
        })

    </script>
</body>
</html>